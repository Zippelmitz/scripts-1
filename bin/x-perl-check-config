#!/usr/bin/env perl
#
# Check configuration files with Config::Any
#

use strict;
use Config::Any;
use Data::Dump qw( dump );

my $cfg = Config::Any->load_files({ files => \@ARGV, use_ext => 1 });

for (@$cfg) {
  my ($filename, $config) = each %$_;
  print "Got configuration from file '$filename':\n", dump($config), "\n";
}
