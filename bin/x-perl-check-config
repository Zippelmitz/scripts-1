#!/usr/bin/env perl
#
# Check configuration files with Config::Any
#

use strict;
use warnings;
use Config::Any;
use Data::Dump qw( pp );

my $cfg = Config::Any->load_files({ files => \@ARGV, use_ext => 1 });

for my $c (@$cfg) {
  while (my ($filename, $config) = each %$c) {
    print "Got configuration from file '$filename':\n", pp($config), "\n";
  }
}

