#!/bin/sh

workdir=`mktemp -d -t my-perl-update-process`
if [ ! -d "$workdir" ] ; then
  echo "Could not create temporary work directory: $!"
  exit 1
fi
cd $workdir

minicpan
git clone git://github.com/melo/task-belike-melo.git bootstrap

cd bootstrap || exit

dzil run cpanm . || cpanm .
moose-outdated | cpanm
dzil run cpanm . || cpanm .

